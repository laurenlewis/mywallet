
  <h2>Share a Card</h2>
  <p>Please complete the form below to share the listed card with someone!</p>
  <table class="table table-striped table-bordered">
	  <thead>
	    <tr>
	      <th>Card Number</th>
	      <th>Card Type</th>
	      <th>Expiration Month</th>
	      <th>Expiration Year</th>
	      <th>Balance</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
		<tr>
		  <td><%= @card.card_number %></td>
	      <td><%= @card.card_type %></td>
	      <td><%= @card.expiration_month %></td>
		  <td><%= @card.expiration_year %></td>
		  <td><%= @card.balance %></td>
		  <td>
  		  </td>
		</tr>
	  </tbody>
  </table>
  <hr>
  <div class="row">
	  <div class="col-md-4">
			<%= form_tag do %>
		  	<label>Enter a user's email to share:</label>
		  	<input class="form-control" type="email" name="email" placeholder="E-mail address" />
		  	<br />
		  	<input class="btn btn-success" type="submit" value="Submit" />
		  <% end %>
	  </div>
  </div>

  <br><br>
<%= link_to 'Cancel', {:controller =>'users', :action => 'show', :id => session[:session_user_id]} %>
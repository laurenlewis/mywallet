<p id="notice"><%= notice %></p>

<h1>Your Cards</h1>

<table>
  <thead>
    <tr>
      <th>Card Number</th>
      <th>Card Type</th>
      <th>Expiration Month</th>
      <th>Expiration Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.card_number%></td>
        <td><%= card.card_type%></td>
        <td><%= card.expiration_month%></td>
        <td><%= card.expiration_year%></td>
        <td><a href="/cards/<%=card.id %>">Show</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if session[:session_user_id] %>
  <%= link_to 'New Card', new_card_path %>
<% end %>